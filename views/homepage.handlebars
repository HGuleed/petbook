<div class="container mt-5" id="backgorund">
  <div class="row">
    <div class="col">
      <section>
        <h3 class="d-flex justify-content-center">Connect with fellow pet lover!</h3>
        <div class="d-flex justify-content-center">
          <form class="bg-light p-3 mt-5 rounded" id="loginForm">
            <div class="row g-3 p-1">
              <div class="col-auto">
                <label for="inputEmail" class="visually-hidden">Email</label>
                <input
                  type="email"
                  class="form-control"
                  id="inputEmail"
                  placeholder="email@example.com"
                />
              </div>
            </div>
            <div class="row g-3 p-1">
              <div class="col-auto">
                <label
                  for="inputPassword"
                  class="visually-hidden"
                >Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="inputPassword"
                  placeholder="Password"
                />
              </div>
            </div>
            <div class="row g-3 p-1">
              <div class="col-auto">
                <button
                  type="submit"
                  class="btn btn-primary mb-3"
                >Login</button>
              </div>
            </div>
            <div class="p-2">
              <p>Are you new? Click
                <a href="/signup">here</a>
                to sign up</p>
            </div>
          </form>
        </div>
      </section>
    </div>
  </div>
</div>

<script src="/javascript/logout.js"></script>
<script src="/javascript/login.js"></script>